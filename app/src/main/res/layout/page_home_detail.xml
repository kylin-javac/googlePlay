<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fl_detail_appinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/list_item_bg_select">
            </FrameLayout>

            <FrameLayout
                android:id="@+id/fl_detail_appsafe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/list_item_bg_select">
            </FrameLayout>

            <HorizontalScrollView
                android:id="@+id/hsv_detail_pics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#cccccc">
            </HorizontalScrollView>

            <FrameLayout
                android:id="@+id/fl_detail_appdes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/list_item_bg_select">
            </FrameLayout>


        </LinearLayout>
    </ScrollView>
    <FrameLayout
        android:id="@+id/fl_detail_appdownload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/detail_bottom_bg">
    </FrameLayout>



</LinearLayout>